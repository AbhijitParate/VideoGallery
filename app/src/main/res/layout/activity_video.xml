<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_overlay"
    tools:context="com.centralway.abhijit.videogallery.VideoActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/layout_player_controls">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    <TextView
        android:id="@+id/tvVolume"
        style="@style/PlayerControl.Text"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:visibility="gone"
        android:background="@color/black_overlay"
        android:drawableTop="@drawable/ic_player_control_volume"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Volume" />
</FrameLayout>
